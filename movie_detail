<?php
    session_start();
    require "connections.php"
    function get_description(){
        global $dbconn;
        if(isset($_GET['genre'])){
            $sql = "SELECT movie_description
                    FROM movie_table
                    WHERE movie_id = :movie_id";
            $stmt = $dbconn -> prepare($sql);
            $stmt -> execute(array(':movie_id'=>$_GET['movie_id']));
            $category = $stmt->fetchAll();
        }
            
    }
